      <section id="contact-home" class="bg-darkblue">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2 class="contact-title text-center">Get in touch!</h2>
                    <hr class="divider-white">
                </div>
            </div>
            <div class="row justify-content-center">
                <%= form_for Contact.new do |f| %>
                <div class="col">
                    <%= f.label :name, class: "contact-form-label" %></br>
                    <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>

                    <%= f.label :email, class: "contact-form-label" %></br>
                    <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

                    <%= f.label :message, class: "contact-form-label" %></br>
                    <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                        placeholder: "Send me a message"%></br>

                    <div class="hidden">
                        <%= f.label :nickname %>
                        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
                    </div>

                    <%= f.submit 'Send Message', class: 'btn btn-primary' %>
                </div>
                <% end %>

            </div>
        </div>
        </div>
    </section>

