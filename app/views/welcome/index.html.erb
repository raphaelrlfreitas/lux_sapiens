                    <%= image_tag("blur-camera-depth-of-field-2608519.jpg", :class => "about-img", :alt => "about-image") %>
                </div>
            </div>
        </div>
    </section>

    <!-- /ABOUT SECTION -->

    <!-- SERVICES SECTION -->

    <section id="services" class="bg-darkblue">
        <div class="container-fluid serices-bg-img serices-container">
                <div class="row services-title">
                        <div class="col">
